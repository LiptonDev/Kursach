<UserControl 
    x:Class="Kursach.Views.WelcomeSlides.Slide3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Style="{StaticResource CenterStack}">

        <TextBlock Text="Вы можете просматривать всех сотрудников колледжа"
                   TextWrapping="Wrap"
                   Style="{StaticResource TitleBlock}"/>

        <TextBlock Text="Вы можете добавлять и удалять сотрудников"
                   Style="{StaticResource SliderBlock}"/>

        <UniformGrid Rows="1">
            <Button Style="{StaticResource PreviousSliderButton}"/>

            <Button Content="Открыть сотрудников"
                    Command="{Binding StaffCommand}"
                    Style="{StaticResource FlatButton}"/>

            <Button Style="{StaticResource NextSliderButton}"/>
        </UniformGrid>

    </StackPanel>

</UserControl>
