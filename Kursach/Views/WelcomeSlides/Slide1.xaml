<UserControl 
    x:Class="Kursach.Views.WelcomeSlides.Slide1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Style="{StaticResource CenterStack}">

        <TextBlock Text="Добро пожаловать"
                   Style="{StaticResource TitleBlock}"/>

        <TextBlock Text="Вы - Администратор"
                   Style="{StaticResource TitleBlock}"
                   Visibility="{Binding User.Mode, Converter={StaticResource AdminUserModeToVisibility}}"/>

        <TextBlock Text="Давайте я покажу Вам, что тут есть"
                   Style="{StaticResource TitleBlock}"/>

        <Button Style="{StaticResource NextSliderButton}"/>

    </StackPanel>

</UserControl>
