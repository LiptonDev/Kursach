<UserControl 
    x:Class="Kursach.Views.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Kursach.Converters"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <converters:IsBudgetConverter x:Key="IsBudgetConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <UniformGrid Rows="1">
            <Button Content="Добавить группу"
                    Command="{Binding AddGroupCommand}"
                    Style="{StaticResource UserModeButton}"/>

            <Button Content="Экспорт данных"
                    Command="{Binding ExportToExcelCommand}"/>
        </UniformGrid>

        <ItemsControl ItemsSource="{Binding Groups}"
                      Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <material:Card Margin="5">
                        <StackPanel Margin="5">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MarginBlock}"/>
                            </StackPanel.Resources>

                            <TextBlock Text="{Binding Name, StringFormat='Группа: {0}'}"/>

                            <TextBlock Text="{Binding Curator, StringFormat='Куратор: {0}'}"/>

                            <TextBlock Text="{Binding IsBudget, Converter={StaticResource IsBudgetConverter}}"/>

                            <Button Content="Редактировать"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.GroupEditorCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource UserModeButton}"/>
                            
                            <Button Content="Удалить"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.DeleteGroupCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource UserModeButton}"/>
                        </StackPanel>
                    </material:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</UserControl>
