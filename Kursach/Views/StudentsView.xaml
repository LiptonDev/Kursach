<UserControl 
    x:Class="Kursach.Views.StudentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Kursach.Converters"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <converters:ActualSizeConverter Add="{x:Null}" x:Key="NullActualSizeConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Добавить студента"
                Command="{Binding AddStudentCommand}"
                Visibility="{Binding User.Mode, Converter={StaticResource RWUserModeToVisibility}}"/>

        <ItemsControl ItemsSource="{Binding Groups}"
                      Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- EXPANDER - GROUP NAME -->
                    <materialDesign:Card Margin="5">
                        <Expander Header="{Binding Name}"
                                  MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Converter={StaticResource NullActualSizeConverter}}">
                            <ItemsControl ItemsSource="{Binding Students}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- STUDENT -->
                                        <materialDesign:Card Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding LastName, StringFormat='Фамилия: {0}'}"
                                                           Style="{StaticResource MarginBlock}"/>

                                                <TextBlock Text="{Binding FirstName, StringFormat='Имя: {0}'}"
                                                           Style="{StaticResource MarginBlock}"/>

                                                <TextBlock Text="{Binding MiddleName, StringFormat='Отчество: {0}'}"
                                                           Style="{StaticResource MarginBlock}"/>

                                                <Button Content="Редактировать"
                                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.EditStudentCommand}"
                                                        CommandParameter="{Binding}"
                                                        Visibility="{Binding Path=DataContext.User.Mode, Converter={StaticResource RWUserModeToVisibility}, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>
                                                <Button Content="Удалить"
                                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.DeleteStudentCommand}"
                                                        CommandParameter="{Binding}"
                                                        Visibility="{Binding Path=DataContext.User.Mode, Converter={StaticResource RWUserModeToVisibility}, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </materialDesign:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</UserControl>
