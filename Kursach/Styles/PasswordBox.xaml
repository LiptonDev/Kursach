<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uihelper="clr-namespace:Kursach.UIHelper">

    <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}" x:Key="MaterialPasswordBox">
        <Setter Property="material:HintAssist.IsFloating" Value="True"/>
        <Setter Property="material:HintAssist.Hint" Value="Пароль"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="uihelper:PasswordBoxAssistant.BindPassword" Value="True"/>
    </Style>

</ResourceDictionary>