<UserControl 
    x:Class="Kursach.Views.GroupEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <materialDesign:DialogHost Identifier="{Binding Identifier}">
        <StackPanel>
            <TextBox Text="{Binding Group.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     materialDesign:HintAssist.Hint="Название группы"/>

            <TextBox Text="{Binding Group.CuratorId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     materialDesign:HintAssist.Hint="ИД куратора"
                     ToolTip="Нажмите дважды, чтобы открыть окно выбора куратора">
                <TextBox.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding OpenStaffSelectorCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <UniformGrid Rows="1">
                <Button Content="Закрыть"
                        Style="{StaticResource CancelDialogButton}"/>

                <Button Content="Сохранить"
                        Style="{StaticResource FlatButton}"
                        Command="{Binding CloseDialogCommand}"/>
            </UniformGrid>
        </StackPanel>
    </materialDesign:DialogHost>

</UserControl>
