<UserControl 
    x:Class="Kursach.Views.WelcomeSlides.Slide4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Kursach"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Kursach.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}">

    <StackPanel Style="{StaticResource CenterStack}">

        <TextBlock Text="Вы можете просматривать всех студентов колледжа"
                   TextWrapping="Wrap"
                   Style="{StaticResource TitleBlock}"/>

        <TextBlock Text="Вы можете добавлять и удалять студентов"
                   Style="{StaticResource SliderBlock}"/>

        <UniformGrid Rows="1">
            <Button Style="{StaticResource PreviousSliderButton}"/>

            <Button Content="Показать студентов"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Static local:RegionViews.StudentsView}"/>

            <Button Style="{StaticResource NextSliderButton}"/>
        </UniformGrid>
    </StackPanel>

</UserControl>
